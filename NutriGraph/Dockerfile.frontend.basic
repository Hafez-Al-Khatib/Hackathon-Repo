FROM python:3.13-slim

WORKDIR /app

# Install streamlit and basic dependencies
RUN pip install --no-cache-dir \
    streamlit>=1.28.0 \
    requests>=2.31.0 \
    Pillow>=10.0.0

# Copy application code
COPY frontend/ ./frontend/

# Expose port
EXPOSE 8501

# Run Streamlit
CMD ["streamlit", "run", "frontend/app.py", "--server.address=0.0.0.0"]
